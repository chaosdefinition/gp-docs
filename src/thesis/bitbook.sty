    \phantomsection
    \addcontentsline{toc}{chapter}{\protect\numberline{#1}{}}
  \fi

  \if@twocolumn
    \@topnewpage[\@makeschapterhead{#1}]
  \else
    \@makeschapterhead{#1}
    \@afterheading
  \fi

  \if@BITstyle
  \else
    \thispagestyle{plain}
  \fi

  \markboth{#1}{#1}}

\def\@makeschapterhead#1{
  \vspace*{\overchapterspace}
  \vbox to \chpaterheaderheight{
